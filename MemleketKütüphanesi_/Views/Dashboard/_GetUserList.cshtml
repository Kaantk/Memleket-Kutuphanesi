
@{
    ViewData["Title"] = "Kullanıcıları Listele";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@model IEnumerable<User>

<!-- getUserListPartial start -->
<div class="rounded-4 m-4 px-3 pt-3 pb-3" style="background-color: #f8f9fa;box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px; width: 100%;">
    <table class="table">
        <thead>
            <!-- Tablonun başlık kısmı -->
            <tr>
                <th scope="col">İsim</th>
                <th scope="col">Soyisim</th>
                <th scope="col">Tc</th>
                <th scope="col">E-mail</th>
                <th scope="col">Cinsiyet</th>
                <th scope="col">Doğum Tarihi</th>
                <th scope="col">Telefon Numarası</th>
                <th scope="col">Ceza Puanı</th>
            </tr>
        </thead>
        <tbody>
            <!-- Tablonun içerik kısmı -->
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.TcNo</td>
                    <td>@item.Email</td>
                    <td>@item.Gender</td>
                    <td>@item.BirthDay</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.ReportsTo</td>
                </tr>
            }
        </tbody>
    </table>
    <!-- getUserListPartial end -->

    <!-- Pagination Start -->
    <nav aria-label="Page navigation example">
        <ul class="pagination m-0">
            <div class="d-flex ms-auto">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </div>
        </ul>
    </nav>
<!-- Pagination End -->
        </div>
<!-- getUserListPartial end -->

